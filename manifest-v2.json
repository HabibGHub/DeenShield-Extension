{
  "manifest_version": 2,
  "name": "Deen Shield - Islamic Content Blocker",
  "short_name": "Deen Shield",
  "version": "1.2.0",
  "description": "Islamic content blocker helping Muslims maintain halal browsing. Block inappropriate content & social media with privacy.",
  "author": "Alhaq Digital Services (ADS)",
  "homepage_url": "https://alhaqds.software",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "https://facebook.com/*",
    "https://www.facebook.com/*",
    "https://twitter.com/*",
    "https://www.twitter.com/*",
    "https://instagram.com/*",
    "https://www.instagram.com/*",
    "https://tiktok.com/*",
    "https://www.tiktok.com/*",
    "https://youtube.com/*",
    "https://www.youtube.com/*",
    "https://reddit.com/*",
    "https://www.reddit.com/*",
    "https://pinterest.com/*",
    "https://www.pinterest.com/*",
    "https://linkedin.com/*",
    "https://www.linkedin.com/*",
    "https://snapchat.com/*",
    "https://www.snapchat.com/*",
    "https://discord.com/*",
    "https://www.discord.com/*"
  ],
  "background": {
    "scripts": ["polyfill.js", "background-v2.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Deen Shield - Islamic Content Blocker",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_security_policy": "script-src 'self'; object-src 'self';",
  "web_accessible_resources": [
    "popup.html",
    "block.html"
  ],
  "applications": {
    "gecko": {
      "id": "deen-shield@alhaqds.software",
      "strict_min_version": "55.0"
    }
  }
}